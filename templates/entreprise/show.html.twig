{% extends 'base.html.twig' %}

{% block title %}
	Liste des salariés
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}

		table {
			border-collapse: collapse;
		}

		td,
		th {
			padding: 1em;
			border: 1px solid black;
		}
	</style>

	<div class="example-wrapper">
		{% block contenu %}
			<h1>Liste des entreprises</h1>

			<table>

				<thead>
					<tr>
						<th>ENTREPRISE</th>
						<th>SIRET</th>
						<th>ADRESSE</th>
						<th>CP</th>
						<th>VILLE</th>
					</tr>
				</thead>
				<tbody></tbody>
				<tr>
					<td>
						<a href="{{ path('entreprise_show', {'id':entreprise.id}) }}">{{ entreprise.raisonSociale }}</a>
					</td>
					<td>{{ entreprise.siret }}</td>
					<td>{{ entreprise.adresse }}</td>
					<td>{{ entreprise.cp }}</td>
					<td>{{ entreprise.ville }}</td>
				</tr>

			</tbody>
		</table>

		<h3>Liste des salariés</h3>

		<table>
			<thead>
				<tr>
				<th>Salarié</th>
				<th>Date Embauche</th>
				</tr>
			</thead>
			{% for salarie in entreprise.salaries | sort((a,b) => a.dateEmbauche <=> b.dateEmbauche) %}
		
				<tr>
					<td>
						<a href="{{ path('salarie_show', {'id':salarie.id}) }}">{{salarie.prenom ~ ' ' ~ salarie.nom}}</a>
					</td>
					<td>{{ salarie.dateEmbauche | date('d/m/Y') }}</td>
				</tr>
			{% endfor %}

		</tbody>
	</table>
</div>{% endblock %}{% endblock %}
