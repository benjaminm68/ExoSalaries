{% extends 'base.html.twig' %}

{% block title %}
Liste des salari√©s
{% endblock %}

{% block body %}
	<style>

        table{
            border-collapse: collapse;
        }

        td,th{
            padding: 1em;
            border: 1px solid black;
        }
	</style>

	<div class="example-wrapper">
		{% block contenu %}
			<h1>Liste des entreprises</h1>

			<a class="btn btn-primary" href="{{ path('entreprise_add') }}">Ajouter</a>

			<table>

				<thead>
					<tr>
						<th>ENTREPRISE</th>
						<th>SIRET</th>
						<th>ADRESSE</th>
						<th>CP</th>
						<th>VILLE</th>
						<th>ACTION</th>
					</tr>
				</thead>
				<tbody>
					{% for entreprise in entreprises %}
					</tbody>
					<tr>
						<td>
							<a href="{{ path('entreprise_show', {'id':entreprise.id}) }}">{{ entreprise.raisonSociale }}</a>
						</td>
						<td>{{ entreprise.siret }}</td>
						<td>{{ entreprise.adresse }}</td>
						<td>{{ entreprise.cp }}</td>
						<td>{{ entreprise.ville }}</td>
						<td><a class="btn btn-primary" href="{{ path ('entreprise_edit', {'id':entreprise.id}) }}">Modifier</a><a class="btn btn-danger" href="{{ path ('entreprise_delete', {'id':entreprise.id}) }}">Supprimer</a></td>
					</tr>
				{% endfor %}
			</tbody>
		</table>

	</div>
{% endblock %}{% endblock %}
